@model IEnumerable<HH.ViewModels.SearchHistoryViewModel>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    var grid = new WebGrid();
}


<style type="text/css">
    .webgrid-table {
        font-family: "Courier New", Courier, monospace;
        font-size: 14px;
        font-weight: normal;
        display: table;
        border-collapse: collapse;
        border: solid 2px #C5C5C5;
        background-color: white;
        align-self: center;
        float: left;
    }

    .grid-container {
        display: grid;
        grid-template-columns: auto auto auto;
        background-color: #2196F3;
        padding: 10px;
    }

    td, th {
        border: 1px solid #C5C5C5;
        padding: 3px 5px 5px;
        text-align: center;
        width: auto auto 200px;
    }

    .webgrid-header a {
        background-color: lavender;
        color: black;
        text-align: center;
        text-decoration: none;
        font-family: 'Trebuchet MS', 'Lucida Sans Unicode', 'Lucida Grande', 'Lucida Sans', Arial, sans-serif;
        width: 33.33% 33.33% 33.33%;
    }

    .webgrid-header {
        background-color: lavender;
        padding: 18px 18px 18px;
        text-align: center;
        font-family: 'Agency FB';
        /*color: black;
        text-decoration: none;
        font-family: 'Trebuchet MS', 'Lucida Sans Unicode', 'Lucida Grande', 'Lucida Sans', Arial, sans-serif;
        width: 33.33% 33.33% 33.33%;*/
    }

    .webgrid-row-style {
        padding: 7px 7px 7px;
    }

    .webgrid-alternating-row {
        background-color: #F5F5F5;
        padding: 7px 7px 7px;
    }

    .col1Width {
        width: 400px;
    }

    .col2Width {
        width: 400px;
    }

    .col3Width {
        width: 400px;
    }
</style>

@{
    var webGrid = new WebGrid(Model, canPage: false);
}

<div id="gridContent" style="align-content:center; padding:20px; ">
    @webGrid.GetHtml(           tableStyle: "webgrid-table",
                                headerStyle: "webgrid-header",
                                footerStyle: "webgrid-footer",
                                alternatingRowStyle: "webgrid-alternating-row",
                                selectedRowStyle: "webgrid-selected-row",
                                rowStyle: "webgrid-row-style",
                                mode: WebGridPagerModes.All,
                                columns:
                                grid.Columns(
                                                grid.Column("Number", "Number", format: @<text>  <span class="display-mode"><label id="lblName">@item.number</label></span> </text>, style: "col1Width"),
                                                                grid.Column("street", "street", format: @<text>  <span class="display-mode"> <label id="lblSKU">@item.street</label></span><span class="edit-mode"><label id="lblSKU"></label></span> </text>, style: "col2Width"),
                                                                                grid.Column("date", "date", format: @<text> <span class="display-mode"><label id="lblAlert">@item.date</label></span> </text>, style: "col3Width")
                                                                                             )
                                                                      )
</div>



