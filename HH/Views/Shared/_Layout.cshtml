<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Housing Health Application</title>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>




<body>
    
    <div class="NavLogoContain">
        <div class="hh_topnav" id="myTopnav">
            <a href="~/Home/Index" class="active">Home</a>

            <div class="hh_dropdown">
                <button class="hh_dropbtn">
                    Search Properties
                    <i class="fa fa-caret-down"></i>
                </button>
                <div class="hh_dropdown-content">
                    @Html.ActionLink("Search Property", "Search", "Properties")

                    @Html.ActionLink("Search History", "SearchHistory", "Properties")

                    @Html.ActionLink("Saved Properties", "SavedProperties", "Properties")
                </div>
            </div>
            <div class="hh_dropdown">
                <button class="hh_dropbtn">
                    Property Reports
                    <i class="fa fa-caret-down"></i>
                </button>
                <div class="hh_dropdown-content">
                    @Html.ActionLink("Property Reports", "Results", "Properties")
                    
                    @Html.ActionLink("Lead Risks", "LeadRisks", "Properties")
                    
                    @Html.ActionLink("Other Hazards", "OtherHazards", "Properties")
                    
                    @Html.ActionLink("Other Issues", "OtherIssues", "Properties")
                    
                    @Html.ActionLink("Property Score", "PropertyScore", "Properties")
                    
                    @Html.ActionLink("History Score", "HistoryScore", "Properties")
                    
                    @Html.ActionLink("Compare Proprerties", "CompareProprerties", "Properties")
                </div>
            </div>
            @Html.ActionLink("News", "News", "Home")

            @Html.ActionLink("Contact", "Contact", "Home")

            @Html.ActionLink("About", "About", "Home")

            <a href="javascript:void(0);" style="font-size:15px;" class="icon" onclick="navigationHH()">&#9776;</a>
            @Html.Partial("_LoginPartial")
        </div>

        <div id="logo">
            <a href="~/Home/Index"><img src="~/images/ClevCodes-logo.png" id="logoimg" /></a>
        </div>

    </div>

    <div class="container body-content">
        @RenderBody()
        <p></p>

        <hr />




        <footer id="footer">
            <p>&copy; @DateTime.Now.Year - Housing Health </p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)


    <script>
        function navigationHH() {
            var x = document.getElementById("myTopnav");
            if (x.className === "hh_topnav") {
                x.className += " responsive";
            } else {
                x.className = "hh_topnav";
            }
        }
    </script>
    <script src="~/Scripts/jquery-3.3.1.js"></script>

</body>
</html>
