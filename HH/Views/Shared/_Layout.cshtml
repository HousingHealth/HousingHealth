<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Housing Health Application</title>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>

<body>
    
    <div class="NavLogoContain">
        <div class="hh_topnav" id="myTopnav">
            <a href="#home" class="active">Home</a>
            <div class="hh_dropdown">
                <button class="hh_dropbtn">
                    Search Properties
                    <i class="fa fa-caret-down"></i>
                </button>
                <div class="hh_dropdown-content">
                    @Html.ActionLink("Search Property", "Index", "Home")
                    <a href="#">Search History</a>
                    <a href="#">Saved Properties</a>
                </div>
            </div>
            <div class="hh_dropdown">
                <button class="hh_dropbtn">
                    Property Reports
                    <i class="fa fa-caret-down"></i>
                </button>
                <div class="hh_dropdown-content">
                    @Html.ActionLink("Property Reports", "About", "Home")
                    <a href="#">Lead Risks</a>
                    <a href="#">Other Hazards</a>
                    <a href="#">Other Issues</a>
                    <a href="#">Property Score</a>
                    <a href="#">History Score</a>
                    <a href="#">Compare Proprerties</a>
                </div>
            </div>
            <a href="#news">News</a>
            <a href="#contact">Contact</a>
            <a href="#about">About</a>
            <a href="javascript:void(0);" style="font-size:15px;" class="icon" onclick="navigationHH()">&#9776;</a>
            @Html.Partial("_LoginPartial")
        </div>

        <div id="logo">
            <a href="~/Views/Home/Contact.cshtml"><img src="~/images/ClevCodes-logo.png" id="logoimg" /></a>
        </div>
    </div>

    <div class="container body-content">
        @RenderBody()
        
        <hr />

        <footer id="footer">
            <p>&copy; @DateTime.Now.Year - Housing Health </p>
        </footer>        

    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)


    <script>
        function navigationHH() {
            var x = document.getElementById("myTopnav");
            if (x.className === "hh_topnav") {
                x.className += " responsive";
            } else {
                x.className = "hh_topnav";
            }
        }
    </script>
    <script src="~/Scripts/jquery-3.3.1.js"></script>

</body>
</html>
